# Django 基本设置
DEBUG=True
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库设置
DB_NAME=erp
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=host.docker.internal
DB_PORT=5432

# JWT设置
JWT_EXPIRATION_DELTA=7
JWT_REFRESH_EXPIRATION_DELTA=30
JWT_SECRET_KEY=your_jwt_secret_key_here

# 邮件设置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_USE_TLS=True

# CORS设置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 文件上传设置
MAX_UPLOAD_SIZE=5242880

# 日志设置
LOG_LEVEL=INFO
LOG_FILE_SIZE=10485760
LOG_BACKUP_COUNT=7

# API设置
API_VERSION=v1
API_TITLE=Django Template API
API_DESCRIPTION=这是一个Django模板项目的API
API_TERMS_OF_SERVICE=https://www.example.com/terms/
API_CONTACT_EMAIL=admin@example.com

# 安全设置
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# 缓存设置
CACHE_TIMEOUT=300
CACHE_MAX_ENTRIES=1000

# 分页设置
PAGE_SIZE=10
MAX_PAGE_SIZE=100

# 限流设置
THROTTLE_ANON_RATE=100/day
THROTTLE_USER_RATE=1000/day

# 时区和语言设置
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-Hans

# 静态文件和媒体文件设置
STATIC_URL=/static/
MEDIA_URL=/media/

# Gunicorn设置
GUNICORN_WORKERS=4
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=30

# 开发工具设置（仅在DEBUG=True时有效）
DJANGO_TOOLBAR=True
SWAGGER_ENABLED=True 